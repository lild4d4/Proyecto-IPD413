set nocompatible
filetype plugin on
filetype indent on
syntax on

set number relativenumber
set autoindent expandtab tabstop=4 shiftwidth=4
set cursorline
set mouse=a
set showcmd
set showmatch
set lazyredraw
set ttyfast


set clipboard="unnamedplus"
set showmatch
set wildmenu
set backspace=indent,eol,start


let &t_SI="\e[6 q"
let &t_EI="\e[2 q"
let &t_ut=''


